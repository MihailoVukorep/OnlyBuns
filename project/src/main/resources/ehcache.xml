<config
        xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xsi:schemaLocation="http://www.ehcache.org/v3
            http://www.ehcache.org/schema/ehcache-core-3.7.xsd">

    <!-- Persistent cache directory -->
    <persistence directory="isa/cache" />

    <!-- Default cache template -->
    <cache-template name="default">
        <expiry>
            <ttl unit="seconds">30</ttl>
        </expiry>
        <listeners>
            <listener>
                <class>com.onlybuns.OnlyBuns.logger.CacheLogger</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>CREATED</events-to-fire-on>
                <events-to-fire-on>EXPIRED</events-to-fire-on>
                <events-to-fire-on>EVICTED</events-to-fire-on>
                <events-to-fire-on>REMOVED</events-to-fire-on>
            </listener>
        </listeners>

        <resources>
            <!-- 1000 objekata na Java heapu -->
            <heap>1000</heap>
            <!-- 10MB u RAMu se čuva -->
            <offheap unit="MB">10</offheap>
            <!-- 20MB na disku se čuva -->
            <disk persistent="true" unit="MB">20</disk>
        </resources>
    </cache-template>

    <!-- Cache configurations -->
    <cache alias="location" uses-template="default">
        <key-type>java.lang.String</key-type>
        <value-type>com.onlybuns.OnlyBuns.model.Coordinate</value-type>
        <resources>
            <heap>2</heap>
        </resources>
    </cache>

    <cache alias="trends" uses-template="default">
        <key-type>java.lang.String</key-type>
        <value-type>com.onlybuns.OnlyBuns.model.Trend</value-type>
        <resources>
            <heap>2</heap>
        </resources>
    </cache>

</config>
